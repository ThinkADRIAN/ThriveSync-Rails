<div class="col-md-12">
  <%= link_to 'Add a new Connection', new_connection_path, class: "btn btn-primary" %>
  <hr>
</div>
<div class="col-md-12">
  <% if !@pending_friends.empty? %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Pending Connections</h3>
      </div>
      <div class="panel-body">
        <% for user in @pending_friends %>
          <div class="col-md-4">  
              <h3><%= user.first_name + " " + user.last_name%></h3>
              <p><%= user.email %></p>
          </div>
          <div class="col-md-8">
            <h3></h3>
            <%= link_to "Accept", connection_path(user), :method => "put", class: "btn-primary btn-xs" %>
            <%= link_to "Reject", connection_path(user), :method => "delete", data: { confirm: "Are you sure you want to reject this connection?" }, class: "btn-danger btn-xs" %>
          </div>
          <div class="col-md-12">
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Connections</h3>
    </div>
    <div class="panel-body">
    <% if !@confirmed_friends.empty?#if @friends != nil %>
      <% for user in @friends %>
        <div class="col-md-4">
          <h3><%= user.first_name + " " + user.last_name %></h3>
          <p><%= user.email %></p>
        </div>
        <div class="col-md-8">
          <h3></h3>
          <%= link_to "Disconnect", connection_path(user), :method => "delete", data: { confirm: "Are you sure you want to disconnect this connection?" }, class: "btn-danger btn-xs" %>
        </div>
        <div class="col-md-12">
          <hr>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-4">
        <h3>No connections available</h3>
      </div>
      <div class="col-md-8">
      </div>
    <% end %>
  </div>
</div>