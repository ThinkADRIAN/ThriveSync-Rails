<div class="col-sm-12">
  <% @rails_users = RailsUser.where(:email == !nil)
  if !@rails_users.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Users List</h3>
      </div>
      <div class="panel-body">
        <% @rails_users.each do |rails_user| %>
          <div class="col-md-4">
              <h3><%= rails_user.first_name + " " + rails_user.last_name %></h3>
              <p><%= rails_user.email %></p>
          </div>
          <div class="col-md-8">
            <h3></h3>
            <%= link_to 'Show Details', rails_user, class: "btn-primary btn-xs" %>
          </div>
          <div class="col-md-12">
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>