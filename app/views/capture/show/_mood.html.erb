<% if @rails_user == nil %>
  <% user = current_rails_user %>
<% else %>
  <% user = @rails_user%>
<% end %>

<% @moods = Mood.where(user_id: user.id, created_at: (DateTime.now.at_beginning_of_day.utc..Time.now.utc)) %>

<div class="scroller">
<% if !@moods.nil? %>
  <% @moods.each do |mood| %>
    <div>
      <p>
        <strong>Mood Level:</strong>
        <br>
        <center>
          <% if mood.mood_rating == 1 %>
            <%= "Severely Depressed" %>
          <% elsif mood.mood_rating == 2 %>
            <%= "Moderately Depressed" %>
          <% elsif mood.mood_rating == 3 %>
            <%= "Mildly Depressed" %>
          <% elsif mood.mood_rating == 4 %>
            <%= "Baseline" %>
          <% elsif mood.mood_rating == 5 %>
            <%= "Mildly Elevated" %> 
          <% elsif mood.mood_rating == 6 %>
            <%= "Moderately Elevated" %>
          <% elsif mood.mood_rating == 7 %>
            <%= "Severely Elevated" %> 
          <% end %>
        </center>
      </p> 

      <p>
        <strong>Anxiety Level:</strong>
        <br>
        <center>
          <% if mood.anxiety_rating == 1 %>
            <%= "None" %>
          <% elsif mood.anxiety_rating == 2 %>
            <%= "Mild" %>
          <% elsif mood.anxiety_rating == 3 %>
            <%= "Moderate" %>
          <% elsif mood.anxiety_rating == 4 %>
            <%= "Severe" %>
          <% end %>
        </center>
      </p>

      <p>
        <strong>Irritability Level:</strong>
        <br>
        <center>
          <% if mood.irritability_rating == 1 %>
            <%= "None" %>
          <% elsif mood.irritability_rating == 2 %>
            <%= "Mild" %>
          <% elsif mood.irritability_rating == 3 %>
            <%= "Moderate" %>
          <% elsif mood.irritability_rating == 4 %>
            <%= "Severe" %>
          <% end %>
        </center>
      </p>
      <% (1..7).each do %>
        <br>
      <% end %>
      <center><%= mood.timestamp.strftime("%I:%M %p") %></center>
    </div>
  <% end %>
<% end %>
<% if @moods.nil? || @moods.count < 3 %>
  <div>
    <center>
      <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
      <%= link_to (image_tag("/assets/plus_btn_icon.png"), new_mood_path, class: "plus-btn") %>
      <%= #link_to 'Add Mood', new_mood_path, remote: true, class: "btn btn-primary btn-lg" %>
      <br>
    </center>
  </div>
<% end %>
</div>


<script type="text/javascript">
  $('.scroller').slick({
    dots: true
  })
</script>