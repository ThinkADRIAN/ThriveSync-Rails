
<div class="container">
  <h1>Listing passive_sleeps</h1>

  <table>
    <thead>
      <tr>
        <th>Passive data point</th>
        <th>Category type</th>
        <th>Category value</th>
        <th>Value</th>
        <th>Unit</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @passive_sleeps.each do |passive_sleep| %>
        <tr>
          <td><%= passive_sleep.passive_data_point_id %></td>
          <td><%= passive_sleep.category_type %></td>
          <td><%= passive_sleep.category_value %></td>
          <td><%= passive_sleep.value %></td>
          <td><%= passive_sleep.unit %></td>
          <td><%= link_to 'Show', passive_sleep %></td>
          <td><%= link_to 'Edit', edit_passive_sleep_path(passive_sleep) %></td>
          <td><%= link_to 'Destroy', passive_sleep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Passive sleep', new_passive_sleep_path %>
</div>