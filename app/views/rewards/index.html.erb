<h1><% t "rewards.index.header" %></h1>

<table>
  <thead>
  <tr>
    <th><% t "rewards.index.user" %></th>
    <th><% t "rewards.index.firste" %></th>
    <th><% t "rewards.index.firsts" %></th>
    <th><% t "rewards.index.rewardse" %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.user_id %></td>
        <td><%= reward.completed_first_entry %></td>
        <td><%= reward.completed_first_streak %></td>
        <td><%= reward.rewards_enabled %></td>
        <td><%= link_to t("menu.show"), reward %></td>
        <td><%= link_to t("menu.edit"), edit_reward_path(reward) %></td>
        <td><%= link_to t("menu.destroy"), reward, method: :delete, data: {confirm: t("repeat.sure")} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t("rewards.new"), new_reward_path %>
