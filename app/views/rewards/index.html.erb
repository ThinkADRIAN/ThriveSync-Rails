<h1>Listing rewards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Completed first entry</th>
      <th>Completed first streak</th>
      <th>Rewards enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.user_id %></td>
        <td><%= reward.completed_first_entry %></td>
        <td><%= reward.completed_first_streak %></td>
        <td><%= reward.rewards_enabled %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_reward_path %>
