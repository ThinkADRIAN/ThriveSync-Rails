<section class="content-20 v-center bg-wet-asphalt">
  <div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h3>Forgot you password?</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="signup-form">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {method: :post, :class => "clearfix"}) do |f| %>
                <%= devise_error_messages! %>
                <br>
                <div class="form-group">
                  <label>Email</label>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
                <div class="actions"><%= f.submit "Send me reset password instructions", class: "btn btn-huge btn-success" %></div>
                <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "pages/footer" %>