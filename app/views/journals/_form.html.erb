<%= form_for @journal, remote: true do |f| %>
  <div class="modal-body">
    <% if @journal.errors.any? %>
      <ul class="errors"></ul>
      <div id="error_explanation">
        <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal entry from being saved:</h2>
        <ul>
        <% @journal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Journal Entry:" %> <br>
      <%= f.text_area :journal_entry %>
    </div>
  </div>
    
  <br>

  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <% if current_page?(:controller => 'journals', :action => 'new') %>
      <%= link_to 'Cancel', journals_cancel_path, remote: true, class: "btn btn-default" %>
    <% elsif current_page?(:controller => 'journals', :action => 'edit') || current_page?(:controller => 'journals', :action => 'destroy') %>
      <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
    <% end %>
  </div>
<% end %>
