<div>
  <% if @user == nil %>
    <h1><%= current_user.first_name.to_s + " " + current_user.last_name.to_s %><h1>
    <%= link_to 'Add a new Journal Entry', new_journal_path(modal_enabled: 'true'), remote: true, class: "btn btn-primary" %>
  <% else %>
    <h1><%= @user.first_name.to_s + " " + @user.last_name.to_s %><h1>
  <% end %>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Change View Period <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Last Year', journals_path(journal_lookback_period: 'last_year')%></li>
      <li><%= link_to 'Last Month', journals_path(journal_lookback_period: 'last_month') %></li>
      <li><%= link_to 'Last Week', journals_path(journal_lookback_period: 'last_week') %></li>
      <li><%= link_to 'This Week', journals_path(journal_lookback_period: 'week') %></li>
      <li><%= link_to 'This Month', journals_path(journal_lookback_period: 'month') %></li>
      <li><%= link_to 'This Year', journals_path(journal_lookback_period: 'year')%></li>
    </ul>
  </div>
</div>

<div>
  <%= render "shared/chart_journal" %>
</div>

<div class="col-sm-12">
  <% if !@journals.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Journal Entries</h3>
      </div>
      <div class="panel-body">
        <% @journals = @journals.order('timestamp DESC')
          @journals.each do |journal| %>
          <% if journal.user_id == current_user.id || (current_user.is? :superuser) || (current_user.is? :pro) && (current_user.clients.include? journal.user_id) %>
            <div class="col-md-8">
                <h4><%= I18n.l journal.timestamp, format: :long  %></h4>
            </div>
            <div class="col-md-4">
              <%= link_to 'Edit', edit_journal_path(journal, modal_enabled: 'true'), remote: true, class: "btn-default btn-xs" %>
              <%= link_to 'Remove', journal_delete_path(journal, modal_enabled: 'true'),  class: "btn-danger btn-xs", remote: true, journal: journal %>
            </div>
            <div class="col-md-12">
              <p>
                <%= journal.journal_entry %>
              </p>
            </div>
            <div class="col-md-12">
              <hr>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>