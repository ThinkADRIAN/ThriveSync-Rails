<h1><%= t "reviews.index.list" %></h1>

<table>
  <thead>
  <tr>
    <th><%= t "reviews.index.counter" %></th>
    <th><%= t "reviews.index.ldate" %></th>
    <th><%= t "reviews.index.tdate" %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_counter %></td>
        <td><%= review.review_last_date %></td>
        <td><%= review.review_trigger_date %></td>
        <td><%= link_to t("menu.show"), review %></td>
        <td><%= link_to t("menu.edit"), edit_review_path(review) %></td>
        <td><%= link_to t("menu.destroy"), review, method: :delete, data: {confirm: t("repeat.sure")} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t("reviews.new"), new_review_path %>
