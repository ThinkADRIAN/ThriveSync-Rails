<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Review counter</th>
      <th>Review last date</th>
      <th>Review trigger date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_counter %></td>
        <td><%= review.review_last_date %></td>
        <td><%= review.review_trigger_date %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
