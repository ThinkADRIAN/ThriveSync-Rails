<%= bootstrap_form_for @self_care, remote: true do |f| %>
    <div class="modal-body">
      <% if @self_care.errors.any? %>
          <ul class="errors"></ul>
          <div id="error_explanation">
            <h2><%= t("selfcare.form.error", :var => pluralize(@self_care.errors.count, "error")) %></h2>
            <ul>
              <% @self_care.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.hidden_field :counseling, :value => false %>
        <%= f.label :counseling %><br>
        <%= f.check_box_without_bootstrap :counseling %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :medication, :value => false %>
        <%= f.label :medication %><br>
        <%= f.check_box_without_bootstrap :medication %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :meditation, :value => false %>
        <%= f.label :meditation %><br>
        <%= f.check_box_without_bootstrap :meditation %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :exercise, :value => false %>
        <%= f.label :exercise %><br>
        <%= f.check_box_without_bootstrap :exercise %>
      </div>

      <% if !current_page?(action: 'new') %>
          <div class="form-group">
            <%= f.label t("selfcare.form.timestamp") %> <br>
            <%= f.datetime_local_field :timestamp, hide_label: true , inline: true%>
          </div>
      <% end %>
    </div>

    <br>

    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <% if params[:modal_enabled] != 'true' %>
          <%= link_to t("menu.cancel"), self_cares_cancel_path, remote: true, class: "btn btn-default" %>
      <% else %>
          <%= link_to t("menu.cancel"), "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      <% end %>
    </div>
<% end %>
