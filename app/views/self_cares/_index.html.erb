<% render "shared/set_lookback" %>

<% todays_self_cares = SelfCare.where(user_id: current_user.id, timestamp: (Time.zone.now.to_date.in_time_zone.at_beginning_of_day..Time.zone.now.to_date.in_time_zone.end_of_day)) %>

<div class="container">
  <div>
    <% if (@user == nil || @user.id == current_user.id) && todays_self_cares.count < MAX_SELF_CARE_ENTRIES %>
        <h1><%= current_user.first_name.to_s + " " + current_user.last_name.to_s %>
          <h1>
            <%= link_to t("selfcare.index.add"), new_self_care_path(modal_enabled: 'true'), remote: true, class: "btn btn-primary" %>
    <% else %>
        <% if @user == nil %>
            <% user = current_user %>
        <% else %>
            <% user = @user %>
        <% end %>
        <h1><%= user.first_name.to_s + " " + user.last_name.to_s %>
          <h1>
    <% end %>

    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= t "selfcare.index.change" %><span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <% if params.has_key?(:user_id) %>
            <li><%= link_to t("repeat.dmy.lasty"), user_self_cares_path(@user, self_care_lookback_period: 'last_year') %></li>
            <li><%= link_to t("repeat.dmy.lastm"), user_self_cares_path(@user, self_care_lookback_period: 'last_month') %></li>
            <li><%= link_to t("repeat.dmy.lastw"), user_self_cares_path(@user, self_care_lookback_period: 'last_week') %></li>
            <li><%= link_to t("repeat.dmy.thisw"), user_self_cares_path(@user, self_care_lookback_period: 'week') %></li>
            <li><%= link_to t("repeat.dmy.thism"), user_self_cares_path(@user, self_care_lookback_period: 'month') %></li>
            <li><%= link_to t("repeat.dmy.thisy"), user_self_cares_path(@user, self_care_lookback_period: 'year') %></li>
        <% else %>
            <li><%= link_to t("repeat.dmy.lasty"), self_cares_path(self_care_lookback_period: 'last_year') %></li>
            <li><%= link_to t("repeat.dmy.lastm"), self_cares_path(self_care_lookback_period: 'last_month') %></li>
            <li><%= link_to t("repeat.dmy.lastw"), self_cares_path(self_care_lookback_period: 'last_week') %></li>
            <li><%= link_to t("repeat.dmy.thisw"), self_cares_path(self_care_lookback_period: 'week') %></li>
            <li><%= link_to t("repeat.dmy.thism"), self_cares_path(self_care_lookback_period: 'month') %></li>
            <li><%= link_to t("repeat.dmy.thisy"), self_cares_path(self_care_lookback_period: 'year') %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div>
    <%= render "shared/chart_self_care" %>
  </div>

  <div>
    <%= render "details" %>
  </div>
</div>