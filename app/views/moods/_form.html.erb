<%= bootstrap_form_for @mood, remote: true do |f| %>
    <div class="modal-body">
      <% if @mood.errors.any? %>
          <ul class="errors"></ul>
          <div id="error_explanation">
            <h2><%= t("moods.form.error", :error => pluralize(@mood.errors.count, "error")) %></h2>
            <ul>
              <% @mood.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <% if !@mood.mood_rating.nil? %>
            <% selected_mood = @mood.mood_rating %>
        <% else %>
            <% selected_mood = 4 %>
        <% end %>

        <script>
            $(function () {
                var select = $("#mood_mood_rating");
                var slider = $("<br><br><div id='slider_mood'></div>").insertAfter(select).slider({
                    min: 1,
                    max: 7,
                    value: select[0].selectedIndex + 1,
                    slide: function (event, ui) {
                        select[0].selectedIndex = ui.value - 1;
                    }
                });
                $("#mood_mood_rating").change(function () {
                    slider.slider("value", this.selectedIndex + 1);
                });
            });
        </script>

        <%= f.label t("repeat.mood.mlevel") %> <br>
        <%= f.select_without_bootstrap(:mood_rating, options_for_select([[t("repeat.mood.sdep"), 1], [t("repeat.mood.moddep"), 2], [t("repeat.mood.mildep"), 3], [t("repeat.mood.baseline"), 4], [t("repeat.mood.milel"), 5], [t("repeat.mood.model"), 6], [t("repeat.mood.sel"), 7]], selected_mood), hide_label: true) %>
      </div>

      <div class="form-group">
        <% if !@mood.anxiety_rating.nil? %>
            <% selected_anxiety = @mood.anxiety_rating %>
        <% else %>
            <% selected_anxiety = 1 %>
        <% end %>

        <script>
            $(function () {
                var select = $("#mood_anxiety_rating");
                var slider = $("<br><br><div id='slider_anxiety'></div>").insertAfter(select).slider({
                    min: 1,
                    max: 4,
                    value: select[0].selectedIndex + 1,
                    slide: function (event, ui) {
                        select[0].selectedIndex = ui.value - 1;
                    }
                });
                $("#mood_anxiety_rating").change(function () {
                    slider.slider("value", this.selectedIndex + 1);
                });
            });
        </script>

        <%= f.label t("repeat.mood.alevel") %><br>
        <%= f.select_without_bootstrap(:anxiety_rating, options_for_select([[t("repeat.mood.none"), 1], [t("repeat.mood.mild"), 2], [t("repeat.mood.mod"), 3], [t("repeat.mood.sev"), 4]], selected_anxiety), hide_label: true) %>
      </div>

      <div class="form-group">
        <% if !@mood.irritability_rating.nil? %>
            <% selected_irritability = @mood.irritability_rating %>
        <% else %>
            <% selected_irritability = 1 %>
        <% end %>

        <script>
            $(function () {
                var select = $("#mood_irritability_rating");
                var slider = $("<br><br><div id='slider_irritability'></div>").insertAfter(select).slider({
                    min: 1,
                    max: 4,
                    value: select[0].selectedIndex + 1,
                    slide: function (event, ui) {
                        select[0].selectedIndex = ui.value - 1;
                    }
                });
                $("#mood_irritability_rating").change(function () {
                    slider.slider("value", this.selectedIndex + 1);
                });
            });
        </script>

        <%= f.label t("repeat.mood.ilevel") %><br>
        <%= f.select_without_bootstrap(:irritability_rating, options_for_select([[t("repeat.mood.none"), 1], [t("repeat.mood.mild"), 2], [t("repeat.mood.mod"), 3], [t("repeat.mood.sev"), 4]], selected_irritability), hide_label: true) %>
      </div>
    </div>

    <% if !current_page?(action: 'new') %>
        <div class="form-group">
          <%= f.label t("moods.form.timestamp") %> <br>
          <%= f.datetime_local_field :timestamp, hide_label: true %>
        </div>
    <% end %>

    <br>

    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <% if params[:modal_enabled] != 'true' %>
          <%= link_to t("menu.cancel"), moods_cancel_path, remote: true, class: "btn btn-default" %>
      <% else %>
          <%= link_to t("menu.cancel"), "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      <% end %>
    </div>
<% end %>
