<% flash.each do |type, message| %>
  $('#flash_messages').html("<%= escape_javascript(render :partial => 'shared/flash_notices' , :locals => { :flash => flash }) %>" ).slideDown(500).delay(3000).slideUp(500)
<% end %>

$("ul.errors").html("");
<% if @mood.errors.any? %>
  <% @mood.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".mood-index").html("<%= escape_javascript(render 'index') %>");
  $("#mood-modal").modal("hide");
  
  $(".mood-chart").html("<%= escape_javascript(render 'shared/chart_mood') %>");
  $(".capture-window").html("<%= escape_javascript(render 'capture/show/mood') %>");
<% end %>