              <% end %>
            </td>
            <td>
              <% if scorecard.checkin_friday %>
                  X
              <% end %>
            </td>
            <td>
              <% if scorecard.checkin_saturday %>
                  X
              <% end %>
            </td>
            <td><%= scorecard.checkins_to_reach_goal %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

