<div class="container">
  <h1><%= t "scorecards.index.scorecard" %></h1>

  <div class="col-sm-12">

    <h5><%= t "scorecards.index.goals" %></h5>

    <table class="table table-condensed">
      <thead>
      <tr>
        <th><%= t "scorecards.index.cigoals" %></th>
        <th><%= t "repeat.days.sun" %></th>
        <th><%= t "repeat.days.mon" %></th>
        <th><%= t "repeat.days.tue" %></th>
        <th><%= t "repeat.days.wed" %></th>
        <th><%= t "repeat.days.thur" %></th>
        <th><%= t "repeat.days.fri" %></th>
        <th><%= t "repeat.days.sat" %></th>
        <th><%= t "scorecards.index.togo" %></th>
      </tr>
      </thead>

      <tbody>
      <% @scorecards.each do |scorecard| %>
          <tr>
            <td><%= scorecard.checkin_goal %>
              - <%= link_to t("menu.edit"), edit_scorecard_path(scorecard), class: "btn-default btn-xs" %></td>
            <td>
              <% if scorecard.checkin_sunday %>
                  X
              <% end %>
            </td>
            <td>
              <% if scorecard.checkin_monday %>
                  X
              <% end %>
            </td>
            <td>
              <% if scorecard.checkin_tuesday %>
