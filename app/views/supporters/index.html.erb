<div class="container">
  <br>

  <div class="col-sm-12">
    <%
       if @supported_thrivers != nil
         @supported_thrivers.sort_by { |r| r.last_name.downcase }
       end
    %>

    <% if !@requested_thrivers.empty? %>
        <div class="panel panel-warning">
          <div class="panel-heading">
            <% if current_user.is? :supporter %>
                <h3 class="panel-title"><%= t "supporters.requests" %></h3>
            <% end %>
          </div>
          <div class="panel-body">
            <% for user in @requested_thrivers %>
                <% if (user.is? :pro) || (user.is? :user) %>
                    <div class="col-md-4">
                      <h3><%= user.first_name + " " + user.last_name %></h3>

                      <p><%= user.email %></p>
                    </div>
                    <div class="col-md-8">
                      <h3></h3>
                      <%= link_to t("repeat.accept"), connection_path(user), :method => "put", class: "btn-primary btn-xs" %>
                      <%= link_to t("repeat.reject"), connection_path(user), :method => "delete", data: {confirm: t("supporters.sure")}, class: "btn-danger btn-xs" %>
                    </div>
                    <div class="col-md-12">
                      <hr>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
    <% end %>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "supporters.list" %></h3>
      </div>
      <div class="panel-body">
        <% if !@supported_thrivers.blank? %>
            <% @supported_thrivers.each do |thriver| %>
                <div class="col-md-4">
                  <h3><%= thriver.first_name + " " + thriver.last_name %></h3>

                  <p><%= thriver.email %></p>
                </div>
                <div class="col-md-8">
                  <h3></h3>
                  <%= link_to t("supporters.send"), new_message_path(thriver_id: thriver.id), class: "btn-primary btn-xs" %>
                </div>
                <div class="col-md-12">
                  <hr>
                </div>
            <% end %>
        <% else %>
            <div>
              <h3><%= t "supporters.nocon" %></h3>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

