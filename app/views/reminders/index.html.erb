<h1>Reminders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Alert time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.user_id %></td>
        <td><%= reminder.message %></td>
        <td><%= reminder.sunday_enabled %></td>
        <td><%= reminder.monday_enabled %></td>
        <td><%= reminder.tuesday_enabled %></td>
        <td><%= reminder.wednesday_enabled %></td>
        <td><%= reminder.thursday_enabled %></td>
        <td><%= reminder.friday_enabled %></td>
        <td><%= reminder.saturday_enabled %></td>
        <td><%= reminder.alert_time %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
