<div class="container">

  <h1><%= t "reminders.index.remind" %></h1>

  <table class="table table-condensed">
    <thead>
    <tr>
      <th><%= t "reminders.index.message" %></th>
      <th><%= t "repeat.days.sun" %></th>
      <th><%= t "repeat.days.mon" %></th>
      <th><%= t "repeat.days.tue" %></th>
      <th><%= t "repeat.days.wed" %></th>
      <th><%= t "repeat.days.thur" %></th>
      <th><%= t "repeat.days.fri" %></th>
      <th><%= t "repeat.days.sat" %></th>
      <th><%= t "reminders.index.alert" %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @reminders.order('alert_time ASC').each do |reminder| %>
        <tr>
          <td><%= reminder.message %></td>
          <td>
            <% if reminder.sunday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.monday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.tuesday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.wednesday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.thursday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.friday_enabled %>
                X
            <% end %>
          </td>
          <td>
            <% if reminder.saturday_enabled %>
                X
            <% end %>
          </td>
          <td><%= reminder.alert_time.strftime("%I:%M %P") %></td>
          <td><%= link_to t("menu.edit"), edit_reminder_path(reminder) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>