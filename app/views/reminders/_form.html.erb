      <%= f.check_box :tuesday_enabled %>
      <%= f.label "Tuesday" %>
      <%= f.check_box :wednesday_enabled %>
      <%= f.label "Wednesday" %>
      <%= f.check_box :thursday_enabled %>
      <%= f.label "Thursday" %>
      <%= f.check_box :friday_enabled %>
      <%= f.label "Friday" %>
      <%= f.check_box :saturday_enabled %>
      <%= f.label "Saturday" %>
    </div>
    <div class="field">
      <%= f.label :alert_time %><br>
      <%= f.time_select :alert_time %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
