<% @moods = Mood.where(user_id: current_rails_user.id) %>
<% @sleeps = Sleep.where(user_id: current_rails_user.id) %>
<% @self_cares = SelfCare.where(user_id: current_rails_user.id) %>
<% @journals = Journal.where(user_id: current_rails_user.id) %>
<p id="pdf_link"><%= link_to "Export to PDF", rails_user_path(@rails_user, :format => "pdf") %></p>

<div class="col-md-12">
  <%= link_to 'Add a new Mood Entry', new_mood_path, class: "btn btn-primary" %>
  <%= link_to 'Add a new Sleep Entry', new_sleep_path, class: "btn btn-primary" %>
  <%= link_to 'Add a new Self Care Entry', new_self_care_path, class: "btn btn-primary" %>
  <%= link_to 'Add a new Journal Entry', new_journal_path, class: "btn btn-primary" %>
  <%= link_to 'Export to PDF', "//pdfcrowd.com/url_to_pdf/", class: "btn btn-default" %>
  <hr>
</div>

<br>
<div class="col-md-12">
	<%= render "shared/chart_mood" %>
	<div class="btn-group btn-group-justified">
		<%= link_to 'Add a new Mood Entry', new_mood_path, class: "btn btn-primary btn-xs btn-block" %>
		<%= link_to 'View Mood Entries', moods_path, class: "btn btn-default btn-xs btn-block" %>
	</div>
	<hr>
</div>

<div class="col-md-12">
	<%= render "shared/chart_sleep" %>
	<div class="btn-group btn-group-justified">
		<%= link_to 'Add a new Sleep Entry', new_sleep_path, class: "btn btn-primary btn-xs btn-block" %>
		<%= link_to 'View Sleep Entries', sleeps_path, class: "btn btn-default btn-xs btn-block" %>
	</div>
	<hr>
</div>

<div class="col-md-6">
	<%= render "shared/chart_self_care" %>
	<div class="btn-group btn-group-justified">
		<%= link_to 'Add a new Self Care Entry', new_self_care_path, class: "btn btn-primary btn-xs btn-block" %>
		<%= link_to 'View Self Care Entries', self_cares_path, class: "btn btn-default btn-xs btn-block" %>
	</div>
	<hr>
</div>

<div class="col-md-6">
	<%= render "shared/chart_journal" %>
	<div class="btn-group btn-group-justified">
		<%= link_to 'Add a new Journal Entry', new_journal_path, class: "btn btn-primary btn-xs btn-block" %>
		<%= link_to 'View Journal Entries', journals_path, class: "btn btn-default btn-xs btn-block" %>
	</div>
	<hr>
</div>