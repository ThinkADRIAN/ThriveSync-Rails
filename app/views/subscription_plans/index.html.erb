<h1>Listing subscription_plans</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Interval</th>
      <th>Stripe</th>
      <th>Name</th>
      <th>Interval count</th>
      <th>Trial period days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscription_plans.each do |subscription_plan| %>
      <tr>
        <td><%= subscription_plan.amount %></td>
        <td><%= subscription_plan.interval %></td>
        <td><%= subscription_plan.stripe_id %></td>
        <td><%= subscription_plan.name %></td>
        <td><%= subscription_plan.interval_count %></td>
        <td><%= subscription_plan.trial_period_days %></td>
        <td><%= link_to 'Show', subscription_plan %></td>
        <td><%= link_to 'Edit', edit_subscription_plan_path(subscription_plan) %></td>
        <td><%= link_to 'Destroy', subscription_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

