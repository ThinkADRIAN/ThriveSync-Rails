<% flash.each do |type, message| %>
  $('#flash_messages').html("<%= escape_javascript(render :partial => 'shared/flash_notices' , :locals => { :flash => flash }) %>" ).slideDown(500).delay(3000).slideUp(500)
<% end %>

$("ul.errors").html("");
<% if @sleep.errors.any? %>
  <% @sleep.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".sleep-index").html("<%= escape_javascript(render 'index') %>");
  $("#sleep-modal").modal("hide");

  $(".shared-index").html("<%= escape_javascript(render 'shared/index') %>");
  $(".capture-window").html("<%= escape_javascript(render 'capture/show/sleep') %>");
<% end %>