<div class="modal-header">
  <h3><%= t "sleeps.delete.header" %></h3>
</div>

<div class="modal-body">
  <ul class="errors"></ul>
  <%= t "sleeps.delete.sure" %>
</div>

<div class="modal-footer">
  <%= link_to t("sleeps.delete.yes"), sleep_path(@sleep), method: :delete, remote: true, class: "btn btn-danger" %>
  <%= link_to t("sleeps.delete.no"), "#", class: "btn btn-default", data: {dismiss: "modal"} %>
</div>